<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 <hibernate-mapping>
 
 <class name="com.tca.entities.Student" table="student">
  
  <id name="rno" column="RNO"/>
  <property name="name" column="NAME"/>
  <property name="per" column="PER"/>
 
 </class >
 
 <!-- Observe Column attribute is missing -->
 <!-- bcz we expecting the name of field name & column name must be same -->
 <class name="com.tca.entities.Teacher" table="teacher">
 	<id name="tno"/>
 	<property name="tname" />
 	<property name="sal" />
 	
 </class>
 
 </hibernate-mapping>